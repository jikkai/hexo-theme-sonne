<%
    var content = JSON.parse(post._content);
%>
<article class="content">
    <section class="works">
        <% for (var key in content) { %>
            <div class="pattern">
                <a href="<%= content[key].link %>" target="_blank">
                    <h2><%= content[key].title %></h2>
                    <p><%= content[key].description %></p>
                </a>
            </div>
        <% } %>
    </section>
</article>

<style>
    .works {
        display: flex;
        flex-wrap: wrap;
    }
    .works .pattern {
        position: relative;
        width: 48%;
        margin-bottom: 1rem;
        text-align: center;
        overflow: hidden;
    }
    .works .pattern:nth-child(2n) {
        margin-left: 2%;
    }
    .works .pattern a {
        position: relative;
        width: 100%;
        height: 180px;
        padding: 1rem 1.5rem;
        border: none;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        box-sizing: border-box;
        background: rgba(0, 0, 0, 0.4);
        z-index: 1;
        transition: all 0.3s;
    }
    .works .pattern a:hover {
        background: rgba(0, 0, 0, 0.8);
        border: 0;
        text-decoration: none;
    }
    .works .pattern h2 {
        color: #FFF;
        font-size: 1.4rem;
        font-weight: 300;
    }
    .works .pattern p {
        color: #FFF;
        font-size: 0.9rem;
    }
    .works .pattern canvas {
        position: absolute;
        z-index: 0;
    }
</style>

<%- js('scripts/trianglify.min') %>
<script>
    var patterns = document.querySelectorAll('.pattern');
    for (var i = 0; i < patterns.length; i++) {
        var width = patterns[i].clientWidth * 2;
        var height = patterns[i].clientHeight * 2;
        var pattern = Trianglify({
            width: width,
            height: height
        });
        var canvas = pattern.canvas();
        canvas.style.margin = '-' + height + 'px 0 0 -' + width / 2 + 'px';
        patterns[i].appendChild(canvas);
    }
</script>
